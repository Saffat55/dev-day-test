{
  "name": "starter-theme",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Pointer Starter Theme",
  "repository": "",
  "main": "webpack.config.js",
  "scripts": {
    "start": "NODE_ENV=development webpack serve",
    "build": "yarn lint && webpack && yarn sprites",
    "sprites": "node devops/sprites/sprites.js",
    "lsep": "node devops/lsep-destroyer/lsep.js",
    "deploy": "yarn build && shopify-themekit deploy && yarn lsep",
    "zip": "webpack; zip -r starter-theme.zip dist",
    "lint": "standard --fix | snazzy && prettier \"**/*.scss\" --write --loglevel error  && stylelint \"**/*.scss\" --fix"
  },
  "dependencies": {
    "@shopify/theme-a11y": "^1.0.1",
    "@shopify/theme-addresses": "^1.0.0",
    "choices.js": "^9.0.1",
    "focus-within-polyfill": "^5.0.6",
    "gsap": "^3.6.1",
    "lazysizes": "^5.2.2",
    "stylelint": "^13.7.0",
    "swiper": "^5.3.1",
    "webpack-livereload-plugin": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.8.4",
    "@shopify/babel-preset": "^23.1.1",
    "@shopify/stylelint-plugin": "^9.0.1",
    "@shopify/themekit": "^1.1.7",
    "@webpack-cli/serve": "^1.3.0",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "colors": "^1.4.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "free-tex-packer-core": "^0.3.4",
    "glob": "^7.1.6",
    "graphql": "^14.0.0",
    "husky": "=4",
    "lint-staged": ">=10",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.9.0",
    "minimist": "^1.2.5",
    "node-sass": "^4.14.1",
    "pluralize": "^8.0.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.1",
    "replace-in-file": "^6.2.0",
    "sass-loader": "^8.0.2",
    "shelljs": "^0.8.4",
    "snazzy": "^9.0.0",
    "standard": "^16.0.3",
    "style-loader": "^2.0.0",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^8.0.2",
    "terminal-kit": "^2.0.7",
    "typescript": "^4.0.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^4.3.0",
    "webpack-dev-server": "^3.11.2",
    "yaml": "^1.10.2"
  },
  "standard": {
    "globals": [
      "Shopify",
      "theme",
      "fetch",
      "location",
      "Event",
      "alert"
    ],
    "ignore": [
      "node_modules/**",
      "dist/**",
      "*.d.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "standard --fix",
    "*.scss": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
