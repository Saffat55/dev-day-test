<div class="sprites">
  <div class="sprite-section">
    {% include 'sprite' with
      sprite_name: 'logo2',
      wrapper_class: 'test-sprite',
      frame_rate: 24
    %}
  </div>

  <div class="sprite-section">
    {% include 'sprite' with
      sprite_name: 'logo-hover',
      wrapper_class: 'test-sprite click-sprite',
      frame_rate: 24,
      auto_play: false,
      attributes: 'data-click-sprite'
    %}
  </div>
</div>





















