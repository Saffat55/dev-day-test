<video
  playsinline
  muted
  autoplay
  loop
  class="video {{ classes }} video--background"
  data-video
  {{ attributes }}
  aria-hidden="true"
  aria-disabled="true"
>
  {% if disable_defer %}
    <source
      src="{{ src }}"
      type="video/{{ file_type | default: 'mp4' }}"
    >
  {% else %}
    <source
      src=""
      class="hide"
      data-src="{{ src }}"
      {% if mobile_src != blank %}data-mobile-src="{{ mobile_src }}"{% endif %}
      type="video/{{ file_type | default: 'mp4' }}"
    >
  {% endif %}
  Sorry, your browser doesn't support embedded videos.
</video>